<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_listes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_face_black_48dp" />

        <TextView
            android:id="@+id/marquetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardImage"
            android:text="Marque: "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/marque"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardImage"
            android:layout_toRightOf="@+id/marquetxt"
            android:text="marque"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/codetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marquetxt"
            android:text="Code: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/marque"
            android:layout_toRightOf="@+id/codetxt"
            android:text="code"
            android:textSize="14dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>